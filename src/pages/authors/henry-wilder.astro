---
import ArticleLayout from '../../layouts/ArticleLayout.astro';
import OCPListEntry from '../../components/OCPListEntry.astro';
import type { IObjectEntry, IAuthor } from '../../scripts/index';
import objects from '../../../public/data/objects.json';
const objectList: IObjectEntry[] = objects;
import authors from '../../../public/data/authors.json';
const authorList: IAuthor[] = authors;

const authorEntryIds: string[]|undefined = authorList.find(au => au.name == "Henry Wilder")?.entries;
if (authorEntryIds === undefined) throw new Error("Author not found");
const entries: IObjectEntry[] = objectList.filter(e => authorEntryIds.includes(e.id));
---
<ArticleLayout title="Henry Wilder" name="Henry Wilder" desc="Henry Wilder's Entries">
<ul class="card-list">
	 {entries.map((item) => <OCPListEntry anomalyInfo={item} />)}
</ul>
</ArticleLayout>
