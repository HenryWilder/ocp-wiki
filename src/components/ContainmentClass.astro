---
import Tooltip from "./Tooltip.astro";
import containmentClasses from "../../public/data/containment-classes.json";
import type { IContainmentClass } from "../scripts/interfaces";
const containmentClassList: IContainmentClass[] = containmentClasses;
interface Props {
    classId: string
}
const { classId } = Astro.props;
const compContainmentClass: IContainmentClass =
    containmentClassList.find(classElement => classElement.id == classId)
    ?? { id:"", name:"ERROR", tagline:"Could not load containment class", desc:"" };
---
<Tooltip category="Containment Class" name={compContainmentClass.name} tagline={compContainmentClass.tagline} >
    <div class="containment-class"><slot /></div>
</Tooltip>
