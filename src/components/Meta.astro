---
import '../styles/index.scss';

interface Props {
    title: string;
    desc: string;
    thumb?: string;
    addKeywords?: string[];
}

const {
    title,
    desc,
    thumb = "/thumbnail0.png", // We're secure now! :D
    addKeywords = ["index"]
} = Astro.props;
---
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<meta property="og:title" content={title} />
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:image" content={thumb} />
<meta property="og:image:secure_url" content={thumb} />
<meta property="og:description" content={""+desc} />
<meta name="theme-color" content="darkorange">
<meta name="twitter:card" content="summary_large_image">

<title>{title} - OCP Federation</title>
<meta name="keywords" content={`OCP Federation, OCP, ${addKeywords}, ocp wiki, obscure classify preserve, optimal containment protocols, anomaly, indie, story, stories, collection, organization, fictional, alternate universe, AU, interactive, wiki`} />
<meta name="description" content={desc}>
<link href='https://fonts.googleapis.com/css?family=Nothing You Could Do' rel='stylesheet'>
