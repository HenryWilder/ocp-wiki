---
import TooltipNoteSingle from './TooltipNoteSingle.astro';
import TooltipNoteMulti from './TooltipNoteMulti.astro';

interface Props {
    addClass?: string;
    category: string;
    name: string;
    tagline: string;
    path?: string;
    linkText?: string;
    notes?: string|string[]
}
const { addClass = "", category, name, tagline, path, linkText, notes } = Astro.props;
---
<span class={"tooltip "+addClass}>
    <slot />
    <span class="tooltiptext" aria-label="tooltip">
        <span class="tooltip-bubble">
            <span class="comment-name">
                {category}
            </span>
            <span class="tooltip-name" set:html={name}></span>
            <span set:html={tagline}></span>
            {(!!linkText)?(<br/><a href={path}>{linkText}</a>):null}
        </span>
        {
            !!notes ? (Array.isArray(notes)
                ? <TooltipNoteMulti notes={notes} />
                : <TooltipNoteSingle note={notes} />) : null
        }
    </span>
</span>
