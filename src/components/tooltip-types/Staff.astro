---
import Tooltip from "./Tooltip.astro";

// Containment site
import type { IStaffMember } from "../../scripts/index";
import staff from "../../../public/data/staff.json";
const staffList: IStaffMember[] = staff;

interface Props { id: string; }
const { id } = Astro.props;
const tryInfo: IStaffMember|undefined = staffList.find(element => element.id == id);
if (tryInfo === undefined) throw new Error(`Cannot find "${id}" in staff.json`);
const info: IStaffMember = tryInfo;
---
<Tooltip category="Staff Member" name={info.name} tagline={info.tagline} path={"/info/staff.html#"+id} linkText="see more">
    <slot />
</Tooltip>
