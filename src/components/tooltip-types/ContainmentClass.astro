---
import Tooltip from "./Tooltip.astro";
import containmentClasses from "../../../public/data/containment-classes.json";
import type { IContainmentClass } from "../../scripts/index";
const containmentClassList: IContainmentClass[] = containmentClasses;
interface Props {
    id: string
}
const { id } = Astro.props;
const compContainmentClass: IContainmentClass =
    containmentClassList.find(classElement => classElement.id == id)
    ?? { id:"", name:"ERROR", tagline:"Could not load containment class", desc:"" };
---
<Tooltip addClass="containment-class" category="Containment Class" name={compContainmentClass.name} tagline={compContainmentClass.tagline} path="/info/containment-classes.html" linkText="Containment classes">
    {compContainmentClass.name}
</Tooltip>
