---
import IncidentReport from "../components/reports/IncidentReport.astro";
import Redacted from "../components/typography/Redacted.astro";
import RedactedDate from "../components/typography/RedactedDate.astro";
import Warning from "../components/Warning.astro";
import { IIncidentReport } from "../scripts";

const item: IIncidentReport = {
    objectNumber: '002',
    instance: '1 "As Scene on TV"'
};
---
<IncidentReport item={item}>
    <Fragment slot="date"><RedactedDate/></Fragment>
    <Fragment slot="incidentType"><Redacted>xxxxxxxxxxx</Redacted></Fragment>
    <Fragment slot="time"><Redacted>####</Redacted>hrs</Fragment>
    <Fragment slot="reportedBy"><Redacted>xxxxxxxxx</Redacted></Fragment>
    <Fragment slot="location"><Redacted>xxxxxxxxxxx</Redacted></Fragment>
    <Fragment slot="object">002</Fragment>
    <Fragment slot="description">
        Police reports detailing scenes resembling the aftermath of OCP-002 attacks are increasing in frequency.
    </Fragment>
    <Fragment slot="witnessExplanation">
        N/A
    </Fragment>
    <Fragment slot="followup">
        Containment operatives are requesting more amnestics.
    </Fragment>
</IncidentReport>
