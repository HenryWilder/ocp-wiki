---
import Meta from '../components/Meta.astro';
import PageOutline from '../components/PageOutline.astro';
import SiteHeader from '../components/SiteHeader.astro';

interface Props {
  title: string;
  name?: string;
  desc: string;
}
const { title, name = title, desc } = Astro.props;
---
<html lang="en" class="theme-default">

  <script>
    import { loadTheme } from '../scripts/themeset';
    loadTheme();
  </script>

  <head>
    <Meta title={title} desc={desc} />
  </head>
  <body>
    <SiteHeader />
    <div id="viewport-with-aside">
      <slot name="outline" />

      <div id="content-viewport">

        <article>
          <h1>{name}</h1>
          <hr>
          <slot />
          <footer>
            <slot name="footer"></slot>
          </footer>
        </article>

      </div>
    </div>
  </body>
</html>